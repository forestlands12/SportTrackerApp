<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>SportTracker App</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">SportTracker App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
              <a class="nav-link" href="/contact">Contact</a>
            </li>
          <li class="nav-item">
            <a class="nav-link" href="/summary">View Summary</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profile">Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <!-- The "View Details" link for a specific plan should be inside the loop -->
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h1 class="mb-4">Your Training Plans</h1>

    <% if (Object.keys(plans).length === 0) { %>
      <div class="alert alert-info" role="alert">
        You don't have any training plans yet. Create one to get started!
      </div>
    <% } else { %>
      <% Object.entries(plans).forEach(([planId, plan]) => { %>
      <div class="card mb-3 shadow-sm">
        <div class="card-header bg-primary text-white">

          <h2 class="h5 mb-0"><%= plan.name %> <span class="badge bg-light text-dark ms-2"><%= plan.difficulty %></span></h2>
        </div>
        <div class="card-body">
          <h5 class="card-title">Activities:</h5>
          <ul class="list-group list-group-flush">
            <% plan.activities.forEach(activity => { %>
                <li class="list-group-item"><%= activity.name %></li>
            <% }) %>
          </ul>

          <a href="/plan/<%= plan.id %>" class="btn btn-outline-primary mt-3">View Details</a>
        </div>
      </div>
      <% }) %>
    <% } %>
  </div>
</body>
</html>
