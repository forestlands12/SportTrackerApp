<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/font-awesome/css/font-awesome.min.css" rel="stylesheet">
  <style>
      body {
        background-image: url('/videos/Republic Polytechnic 2102 (1).png');
        background-size: cover;
        background-attachment: fixed;
      }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">SportTracker App</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/activities">Activities</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/summary">View Summary</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profile">Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mt-4">
    <!-- Welcome Section -->
    <div class="row">
      <div class="col-md-6">
        <h2>Welcome, <%= user.username %>!</h2>
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Address:</strong> <%= user.address %></p>
        <p><strong>Contact:</strong> <%= user.contact %></p>
        <p><strong>Role:</strong> <%= user.role %></p>
        <a href="/profile/edit" class="btn btn-warning mt-3">Edit Profile</a>
      </div>
      <div class="col-md-6">
        <h3>Your Profile Picture</h3>
        <img src="<%= user.profilePicture ? '/images/' + user.profilePicture : '/images/default-profile.jpg' %>" alt="Profile Picture" class="img-fluid rounded-circle" width="200">
        <a href="/profile/upload" class="btn btn-primary mt-3">Upload New Picture</a>
      </div>
    </div>

    <!-- Activity Summary Section -->
    <hr>
    <h3>Tracked Activities</h3>
    <% if (workouts && workouts.length > 0) { %>
      <div class="row">
        <div class="col-md-6">
          <p><strong>Total Activities Tracked:</strong> <%= workouts.length %></p>
        </div>
        <div class="col-md-6 text-end">
          <a href="/log-workout" class="btn btn-success">Log New Activity <i class="fa fa-plus"></i></a>
        </div>
      </div>
      <ul class="list-group mt-3">
        <% workouts.forEach(workout => { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <strong><%= workout.workout_type %></strong> <br>
              <small>Duration: <%= workout.duration %> mins</small> <br>
              <small>Calories Burned: <%= workout.calories_burned %> kcal</small> <br>
              <small>Intensity: <%= workout.intensity %></small>
            </div>
            <span class="badge bg-primary rounded-pill">
              <%= new Date(workout.workout_date).toLocaleDateString() %>
            </span>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>You haven't tracked any activities yet. Start tracking today!</p>
      <a href="/log-workout" class="btn btn-primary">Log New Activity <i class="fa fa-plus"></i></a>
    <% } %>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white py-3 mt-4">
    <div class="container text-center">
      <p>&copy; 2025 SportTracker App. All Rights Reserved.</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
