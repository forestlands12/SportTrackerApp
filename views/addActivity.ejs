<!-- This is a standalone version that does not require partials -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Activity</title>
    <!-- Linking Bootstrap for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* A little extra styling to match your theme */
        body {
            background-color: #f8f9fa;
        }
        .card {
            border: none;
        }
    </style>
</head>
<body>

    <!-- Your App's Navigation Bar -->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">SportTracker App</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- The Main Form Content -->
    <div class="container mt-4" style="max-width: 800px;">
        <div class="card p-4 p-md-5 shadow-sm">
            <h2 class="text-center mb-4">Add New Activity</h2>
            <form action="/addactivity" method="POST" enctype="multipart/form-data">

                <!-- Activity Name -->
                <div class="mb-3">
                    <label for="activityName" class="form-label fw-bold">Activity Name</label>
                    <input type="text" class="form-control" id="activityName" name="activityName" placeholder="e.g., Bench Press, 5k Run" required>
                </div>

                <!-- Difficulty -->
                <div class="mb-3">
                    <label for="difficulty" class="form-label fw-bold">Difficulty</label>
                    <select class="form-select" id="difficulty" name="difficulty" required>
                        <option value="Easy">Easy</option>
                        <option value="Medium" selected>Medium</option>
                        <option value="Hard">Hard</option>
                    </select>
                </div>

                <hr class="my-4">

                <!-- 3 Activity Metric Columns -->
                <p class="text-muted mb-3">Enter recommended metrics for this activity (optional).</p>
                <div class="row g-3">
                    <div class="col-md-4">
                        <label for="rec_sets" class="form-label">Recommended Sets</label>
                        <input type="number" class="form-control" id="rec_sets" name="rec_sets" placeholder="e.g., 3">
                    </div>
                    <div class="col-md-4">
                        <label for="rec_reps" class="form-label">Recommended Reps</label>
                        <input type="number" class="form-control" id="rec_reps" name="rec_reps" placeholder="e.g., 10">
                    </div>
                    <div class="col-md-4">
                        <label for="rec_duration_mins" class="form-label">Duration (Mins)</label>
                        <input type="number" class="form-control" id="rec_duration_mins" name="rec_duration_mins" placeholder="e.g., 30">
                    </div>
                </div>

                <hr class="my-4">

                <!-- Progression Notes -->
                <div class="mb-3">
                    <label for="progression" class="form-label fw-bold">Progression Notes</label>
                    <textarea class="form-control" id="progression" name="progression" rows="3" placeholder="Describe how a user can make this activity harder over time. e.g., 'Add 2.5kg to the bar each week.'"></textarea>
                </div>

                <!-- File Upload -->
                <div class="mb-4">
                    <label for="video" class="form-label fw-bold">Activity Demonstration</label>
                    <input class="form-control" type="file" id="video" name="video">
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Add Activity to Library</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
